<?php
$file = "count.txt";

if (!file_exists($file)) {
    file_put_contents($file, 0);
}

$count = file_get_contents($file);
$count++;

file_put_contents($file, $count);
?>

<!DOCTYPE html>
<html>
<head>
    <title>Visitor Counter</title>

    <style>
        body {
            font-family: Arial;
            text-align: center;
            margin-top: 100px;
        }

        h1 {
            color: navy;
        }

        p {
            font-size: 20px;
        }
    </style>
</head>

<body>

<h1>Visitor Counter Page</h1>
<p>Total Visitors: <b><?php echo $count; ?></b></p>

</body>
</html>
